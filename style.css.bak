body{
    font: 15px/1.5 Arial, Helvetica, sans-serif;
    padding:0;
    margin:0;
    background-color:#f4f4f4;
    color: #333;
}

/* Utility: visually-hidden for accessible labels */
.sr-only {
    position: absolute !important;
    width: 1px !important;
    height: 1px !important;
    padding: 0 !important;
    margin: -1px !important;
    overflow: hidden !important;
    clip: rect(0, 0, 0, 0) !important;
    white-space: nowrap !important;
    border: 0 !important;
}

/* Small helper for the header tagline */
.tagline {
    margin: 0;
    font-size: 14px;
    color: #dcdcdc;
}

/* Global */
.container{
    width:80%;
    margin:auto;
    overflow: hidden;
}

ul{
    margin: 0;
    padding: 0;
    list-style: none;
}

a {
    transition: all 0.3s ease;
}

.button_1{
    height: 38px;
    background: #e8491d;
    border: 0;
    padding-left: 20px;
    padding-right: 20px;
    color: #ffffff;
    cursor: pointer;
    border-radius: 5px;
    font-weight: bold;
    transition: background 0.3s ease;
}

.button_1:hover {
    background: #d43d15;
    transform: scale(1.05);
}

.dark{
    padding: 15px;
    background: #35424a;
    color: #ffffff;
    margin-top: 10px;
    margin-bottom: 10px;
    border-radius: 8px;
}

/* Header */
header{
    background: #35424a;
    color: #ffffff;
    padding-top: 30px;
    min-height: 70px;
    border-bottom: #e8491d 3px solid;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
}

header a{
    color: #ffffff;
    text-decoration: none;
    text-transform: uppercase;
    font-size: 16px;
}

header li{
    float: left;
    display: inline;
    padding: 0 20px 0 20px;
}

header li a:hover {
    color: #e8491d;
    border-bottom: 2px solid #e8491d;
    padding-bottom: 5px;
}

header .container{
    display: flex;
    flex-wrap: wrap; 
    align-items: center;
    justify-content: space-between;
    gap: 15px;
}

header #branding{
    display: flex;
    align-items: center;
    gap: 15px;
}

header #branding h1{
    margin: 0;
    font-size: 28px;
}

header #branding .logo {
    width: 60px;
    height: 60px;
    border-radius: 8px;
    object-fit: cover;
}

header nav{
    margin-top: 0;
}

/* COLOR FIX: Olayiwola color is white */
header .highlight, 
header .current a{
    color: #ffffff; 
    font-weight: bold;
}
header a:hover{
    color: #e8491d;
    font-weight: bold;
}

/* Showcase */
#showcase{
    min-height: 400px;
    background: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url('image_files/showcase.jpg') center/cover no-repeat;
    text-align: center;
    color: #ffffff;
    display: flex;
    align-items: center;
    justify-content: center;
}

#showcase .container {
    text-align: center;
}

#showcase h1{
    margin-top: 0;
    font-size: 55px;
    margin-bottom: 10px;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
}

#showcase p{
    font-size: 20px;
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.7);
    line-height: 1.8;
}

/* Contact Section (Subscription/Newsletter) */
#contact{
    padding: 25px;
    color: #ffffff;
    background: linear-gradient(135deg, #35424a 0%, #2a3338 100%);
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-top: 3px solid #e8491d;
}

#contact h1{
    margin: 0;
    font-size: 28px;
}

#contact form {
    display: flex;
    gap: 10px;
    align-items: center;
}

#contact input[type="email"]{
    padding: 10px;
    height: 40px;
    width: 300px;
    border: none;
    border-radius: 4px;
    font-size: 14px;
}

/* Boxes / Services */
#boxes{
    margin-top: 20px;
    margin-bottom: 20px;
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    padding: 20px 0;
    justify-content: center;
}

#boxes .box{
    flex: 1 1 300px; 
    max-width: 350px; 
    padding: 20px;
    background: #f4f4f4; 
    margin-bottom: 20px; 
    text-align: center;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); 
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

#boxes .box:hover {
    transform: translateY(-10px);
    box-shadow: 0 8px 12px rgba(0, 0, 0, 0.2);
}

#boxes .box img {
    width: 60px; 
    height: auto;
    margin-bottom: 10px;
    object-fit: contain;
}

#boxes .box h3 {
    margin: 15px 0;
    color: #35424a;
    font-size: 22px;
}

/* Sidebar */
aside#sidebar{
    width: 30%;
    margin-top: 10px;
    padding: 0; 
    background: transparent;
    border-radius: 8px;
    box-shadow: none;
}
aside#sidebar .dark:first-child {
    margin-top: 0;
}
aside#sidebar .dark {
    margin-top: 20px;
}

/* Main-col */
article#main-col{
    width: 65%;
    padding: 20px;
}

article#main-col h1 {
    margin-top: 0;
    color: #35424a;
    margin-bottom: 20px;
}

/* Flex layout for main/content area */
main .container {
    display: flex;
    gap: 20px;
    align-items: flex-start;
    justify-content: space-between;
    padding-bottom: 20px;
}

main .container article#main-col {
    width: 65%;
}

main .container aside#sidebar {
    width: 32%;
}

/* Services List (ul#services) */
ul#services {
    display: block;
}
ul#services li{
    list-style: none;
    padding: 20px;
    border: #e8491d solid 2px;
    margin-bottom: 10px;
    background: #f9f9f9;
    border-radius: 4px;
    transition: all 0.3s ease;
}

ul#services li:hover {
    background: #fff;
    border-color: #35424a;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

ul#services li h4 {
    color: #e8491d;
    margin-bottom: 8px;
}

/* Footer */
footer{
    padding: 20px;
    margin-top: 20px;
    color: #ffffff;
    background-color: #35424a;
    text-align: center;
    border-top: 3px solid #e8491d;
}

/* Page Titles */
.page-title {
    background: linear-gradient(135deg, #35424a 0%, #2a3338 100%);
    color: #ffffff;
    padding: 40px 20px;
    text-align: center;
    margin-bottom: 30px;
}

.page-title h1 {
    margin: 0;
    font-size: 40px;
}

/* --- CONTACT FORM & QUICK LINKS (AESTHETIC FIXES) --- */

.contact-form-container {
    /* Uses .dark styling */
}

/* CRITICAL FIX 1: Make input fields stand out and span the whole container width */
.contact-form-container input[type="text"],
.contact-form-container input[type="email"],
.contact-form-container textarea {
    /* Override width:100% and add margin/padding to match the form design */
    width: calc(100% - 20px); /* Adjusting for padding */
    padding: 10px; 
    border: none; /* Remove border */
    border-radius: 4px;
    background: #ffffff; /* White background for visibility */
    color: #222;
    margin-top: 5px; /* Space between label and input */
    margin-bottom: 15px; /* Space below the input field */
    box-sizing: border-box; /* Crucial for width calculation */
}

/* CRITICAL FIX 2: Style the labels to be separated from the inputs */
.contact-form-container label,
.contact-form-container .form-group-label {
    display: block;
    color: #ffffff;
    padding: 0; 
    margin-top: 15px; 
    font-weight: 600;
}

/* CRITICAL FIX 3: Fix the alignment/spacing of the hidden DIVs around labels and inputs */
/* The HTML uses <div class="quote"> for fields inside the form, let's target that for spacing */
.contact-form-container .quote div {
    /* If you used DIVs to wrap your fields (like in the original 'Get A Quote' section) */
    margin-bottom: 10px;
}

/* CRITICAL FIX 4: Quick Links Readability */
.quick-links-container h3 {
    margin-bottom: 15px;
}

.quick-links-container li a {
    color: #f4f4f4; /* Make links light grey */
    text-decoration: none;
    display: block; 
    padding: 8px 0; 
    border-bottom: 1px dotted rgba(255, 255, 255, 0.2); /* Dotted line separator */
    margin-bottom: 0;
}

.quick-links-container li:last-child a {
    border-bottom: none; /* Remove border from the last item */
}

.quick-links-container li a:hover {
    color: #e8491d;
    background: rgba(0, 0, 0, 0.1); /* Slight hover background */
    padding-left: 5px;
}

/* Button Alignment */
.contact-form-container button[type="submit"] {
    display: block; 
    width: 100%; 
    padding: 12px; 
    margin-top: 20px; 
}


/* --- Media Queries (Responsiveness Fixes) --- */
@media(max-width: 768px){
    header #branding,
    header nav,
    header nav li,
    #contact h1,
    #contact form,
    #boxes .box,
    article#main-col,
    aside#sidebar{
        float: none;
        text-align: center;
        width: 100%;
    }

    header nav ul{
        display: flex;
        gap: 12px;
        align-items: center;
        flex-wrap: wrap; 
        justify-content: center;
    }
    
    header .container {
        flex-direction: column;
        text-align: center;
    }
    
    header nav {
        width: 100%;
    }

    #showcase h1 {
        font-size: 32px;
    }

    #contact {
        flex-direction: column;
        gap: 15px;
    }

    #contact form {
        flex-direction: column;
        width: 100%;
    }

    #contact input[type="email"] {
        width: 100%;
    }

    #contact button, .quote button{
        display: block;
        width: 100%;
    }

    main .container {
        flex-direction: column;
        gap: 0;
    }
    main .container article#main-col {
        width: 100%;
    }
    main .container aside#sidebar {
        width: 100%;
        margin-top: 20px;
    }

    nav ul {
        flex-direction: column;
    }

    header nav ul li {
        padding: 10px 0;
    }

    .contact-form-container,
    .quick-links-container {
        padding: 20px;
        width: 100%;
        box-sizing: border-box; /* Ensures padding is included in width */
    }
    aside#sidebar .dark {
        margin-top: 20px;
    }
}
